{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    // "checkJs": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "inlineSourceMap": true,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react",
    "incremental": true,
    "outDir": "./dist/"
  },
  "include": [
    ".eslintrc.cjs",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.cjs",
    "./src/**/*.js"
  ],
  "exclude": ["node_modules", "dist"]
}
